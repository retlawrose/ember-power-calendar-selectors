{{#let  
  (concat "power-calendar-months/" attrs.calendar.type) 
  (hash 
    calendar=attrs.calendar
    disabledDates=attrs.disabledDates
    firstQuarter=firstQuarter
    format=format
    maxDate=attrs.maxDate
    maxLength=attrs.maxLength
    minDate=attrs.minDate
    onSelect=attrs.onSelect
    onSelectMonth=attrs.onSelectMonth
    onSelectQuarter=attrs.onSelectQuarter
    proximitySelection=attrs.proximitySelection
    showQuarters=showQuarters
  )
  as |componentName publicAPI|}}
  {{#if hasBlock}}
    {{#component componentName publicAPI=publicAPI as |month calendar|}}
      {{yield month calendar}}
    {{/component}}
  {{else}}
    {{component componentName publicAPI=publicAPI}}
  {{/if}}
{{/let}}