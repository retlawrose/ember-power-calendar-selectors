{{#let  
  (concat "power-calendar-years/" type) 
  (hash 
    calendar=@calendar
    disabledDates=@disabledDates
    format=format
    maxDate=@maxDate
    minDate=@minDate
    onSelect=@onSelect
    onSelectYear=@onSelectYear
    type=type
  )
  as |componentName publicAPI|}}
  {{#if hasBlock}}
    {{#component componentName publicAPI=publicAPI as |year calendar|}}
      {{yield year calendar}}
    {{/component}}
  {{else}}
    {{component componentName publicAPI=publicAPI}}
  {{/if}}
{{/let}}